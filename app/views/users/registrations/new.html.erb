<div class="container mx-auto flex justify-center	items-center">
  <div class=" mx-auto mt-4">
    <h2 class="font-bold text-center text-white text-2xl">Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Correo electrónico", class: "mt-2 rounded-md w-96 border-2 p-3.5	" %>
      </div>

      <div class="field">
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "Contraseña", class: "mt-2 rounded-md w-full border-2 p-3.5" %>
      </div>

      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirmar contraseña", class: "mt-2 rounded-md w-full border-2 p-3.5" %>
      </div>

      <div class="actions mt-3">
        <%= f.submit "Sign up", class: "rounded-md bg-cyan-700 p-2 w-full text-white" %>
      </div>

    <% end %>

    <%= render "users/shared/links"%>
  </div>
</div>